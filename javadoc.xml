<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="javadoc">
	<target name="javadoc" description="Create the java doc">
		<javadoc access="private" author="true" doctitle="The JLinAlg API" 
			destdir="javadoc" nodeprecated="false" nodeprecatedlist="false" noindex="false" nonavbar="false" notree="false" splitindex="true" use="true" version="true">
			<fileset dir="src" defaultexcludes="yes">
				<include name="**/*.java" />
				<exclude name="test/**" />
			</fileset>
		</javadoc>
	</target>
	<!-- ================================= 
          target: clean the java doc              
         ================================= -->
	<target name="clean the java doc" description="remove al the files javadoc creates">
		<delete includeemptydirs="true">
			<fileset dir="javadoc">
				<include name="**/*" />
			</fileset>
		</delete>
	</target>

</project>
